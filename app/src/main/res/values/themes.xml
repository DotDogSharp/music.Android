<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeAnNhom" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:statusBarColor">#121212</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonPrimaryStyleLarge">
        <item name="android:height">50dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">#121212</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/drawable_r25dp_outline</item>
        <item name="backgroundTint">#1DB954</item>
    </style>

    <style name="ButtonOutlineStyleLarge" parent="ButtonPrimaryStyleLarge">
        <item name="android:background">@drawable/drawable_r25dp_outline</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="ButtonClassicStyleLarge" paren="ButtonPrimaryStyleLarge">
        <item name="backgroundTint">#656565</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>